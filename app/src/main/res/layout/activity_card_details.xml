<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardbtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cardDetails">


    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="450dp"
        android:layout_height="714dp"
        app:srcCompat="@drawable/background_gradient_light"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="158dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/pop_2"
        tools:layout_editor_absoluteX="265dp"
        tools:layout_editor_absoluteY="415dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:width="150dp"

        android:height="30dp"
        android:background="@drawable/round_button1"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp"
        android:text="Pay Now"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/Cvv"
        android:layout_width="92dp"
        android:layout_height="29dp"
        android:background="@color/btuttons"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="475dp" />

    <TextView
        android:id="@+id/cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/month1"
        android:layout_width="92dp"
        android:layout_height="29dp"
        android:background="@color/btuttons"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="386dp" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/year"
        android:layout_width="92dp"
        android:layout_height="29dp"
        android:background="@color/btuttons"
        android:minHeight="?attr/actionBarSize"
        android:text="Year"
        android:textColor="#000000"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="386dp" />

    <TextView
        android:id="@+id/expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/NameCard"
        android:layout_width="348dp"
        android:layout_height="29dp"
        android:background="@color/btuttons"
        android:minHeight="?attr/actionBarSize"
        android:textSize="15dp"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/namecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name On Card"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/cardnumber"
        android:layout_width="347dp"
        android:layout_height="29dp"
        android:background="@color/btuttons"
        android:minHeight="?attr/actionBarSize"
        android:textSize="15dp"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/CardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.247"/>

    <TextView
        android:id="@+id/form"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_button"
        android:text="     Fill the forum Below"
        android:textColor="#0B0A0A"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="85dp"

        />

    <TextView
        android:id="@+id/instania"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:fontFamily="@font/lobster_regular"
        android:text="@string/instania"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />
</androidx.constraintlayout.widget.ConstraintLayout>