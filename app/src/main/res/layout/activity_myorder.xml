<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrders">

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/cart_tb2"
       android:layout_width="411dp"
       android:layout_height="70dp"
       android:background="#ff611d"
       android:minHeight="?attr/actionBarSize"
       android:theme="?attr/actionBarTheme"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"  />

   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="My Orders"
       android:textColor="#FBFBFB"
       android:textSize="30sp"
       android:textStyle="bold"
       android:layout_marginLeft="-130dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="@+id/cart_tb2"
       app:layout_constraintHorizontal_bias="0.677"
       app:layout_constraintStart_toStartOf="@+id/cart_tb2"
       app:layout_constraintTop_toTopOf="@+id/cart_tb2"
       app:layout_constraintVertical_bias="0.015" />



   <androidx.recyclerview.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="#ffffff"
       android:layout_marginTop="70dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/cart_tb2"
       android:id="@+id/recyclerView"></androidx.recyclerview.widget.RecyclerView>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnBack"
       android:layout_width="117dp"
       android:layout_height="64dp"
       android:width="150dp"
       android:height="20dp"
       android:background="@drawable/round_button1"
       android:text="Back"
       android:textColor="#FAF9F9"
       android:textSize="20sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>